# Railway Environment Variables Template
# Скопируй этот файл и заполни реальными значениями

# Telegram Bot
TELEGRAM_TOKEN=your_bot_token_here

# Database
DATABASE_URL=postgresql://user:password@host:port/database

# OpenAI (опционально)
OPENAI_API_KEY=your_openai_api_key
OPENAI_ORGANIZATION=your_organization_id

# Google Maps (опционально)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Eventbrite (опционально)
EVENTBRITE_API_KEY=your_eventbrite_api_key

# Meetup (опционально)
MEETUP_API_KEY=your_meetup_api_key

# Event sources
ENABLE_MEETUP_API=0
ENABLE_ICS_FEEDS=0
ENABLE_EVENTBRITE_API=0
ENABLE_BALIFORUM=1

# BaliForum (опционально)
BALIFORUM_BASE_URL=https://baliforum.ru
BALIFORUM_LIST_URL=https://baliforum.ru/events
BALIFORUM_MAX_EVENTS=100
BALIFORUM_REQUESTS_PER_SEC=1

# Bot settings
BOT_RUN_MODE=webhook
WEBHOOK_URL=https://your-railway-app.up.railway.app/webhook

# Geocoding settings
GEOCODE_ENABLE=1
GEOCODE_TIMEOUT_S=4
GEOCODE_RATE_QPS=5
GEOCODE_CACHE_TTL_S=86400

# Default radius for event search
DEFAULT_RADIUS_KM=5
RADIUS_STEP_KM=5
MAX_RADIUS_KM=15

# Admin IDs (через запятую)
ADMIN_IDS=123456789,987654321

# Moments feature flags
MOMENTS_ENABLE=1
MOMENT_TTL_OPTIONS="30,60,120"
MOMENT_DAILY_LIMIT=2
MOMENT_MAX_RADIUS_KM=15

# AI parsing flags
AI_PARSE_ENABLE=1
AI_GENERATE_SYNTHETIC=0
STRICT_SOURCE_ONLY=0
